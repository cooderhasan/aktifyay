generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USER MANAGEMENT ====================
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== PAGES ====================
model Page {
  id   String @id @default(cuid())
  slug String @unique
  type String @default("static") // static, product, industry

  // Content - Turkish
  titleTr       String
  h1Tr          String?
  descriptionTr String? @db.Text
  contentTr     String? @db.Text

  // Content - English
  titleEn       String
  h1En          String?
  descriptionEn String? @db.Text
  contentEn     String? @db.Text

  // SEO - Turkish
  metaTitleTr       String?
  metaDescriptionTr String? @db.Text
  ogTitleTr         String?
  ogDescriptionTr   String? @db.Text

  // SEO - English
  metaTitleEn       String?
  metaDescriptionEn String? @db.Text
  ogTitleEn         String?
  ogDescriptionEn   String? @db.Text

  // SEO - General
  canonical     String?
  isIndexed     Boolean @default(true)
  isFollowed    Boolean @default(true)
  schemaEnabled Boolean @default(true)
  ogImage       String?
  imageAltTr    String?
  imageAltEn    String?

  // Media
  image         String?

  // Status
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== PRODUCT CATEGORIES ====================
model ProductCategory {
  id   String @id @default(cuid())
  slug String @unique

  // Basic Info - Turkish
  nameTr        String
  h1Tr          String?          // H1 başlık (farklı olabilir)
  descriptionTr String? @db.Text
  longDescTr    String? @db.Text
  usageAreasTr  String? @db.Text

  // Basic Info - English
  nameEn        String
  h1En          String?          // H1 başlık (farklı olabilir)
  descriptionEn String? @db.Text
  longDescEn    String? @db.Text
  usageAreasEn  String? @db.Text

  // Technical Specs (JSON for flexibility)
  technicalSpecs String? @db.Text

  // SEO - Turkish
  metaTitleTr       String?
  metaDescriptionTr String? @db.Text
  ogTitleTr         String?
  ogDescriptionTr   String? @db.Text

  // SEO - English
  metaTitleEn       String?
  metaDescriptionEn String? @db.Text
  ogTitleEn         String?
  ogDescriptionEn   String? @db.Text

  // SEO - General
  canonical     String?
  isIndexed     Boolean @default(true)
  isFollowed    Boolean @default(true)
  schemaEnabled Boolean @default(true)
  ogImage       String?

  // Media
  image        String?
  imageAltTr   String?
  imageAltEn   String?
  gallery      String? @db.Text // JSON array of image URLs

  // Internal Linking
  relatedIndustries String? @db.Text // JSON array of industry slugs

  // Relations
  faqs FAQ[]

  // Status
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== INDUSTRIES ====================
model Industry {
  id   String @id @default(cuid())
  slug String @unique

  // Basic Info - Turkish
  nameTr        String
  h1Tr          String?
  descriptionTr String? @db.Text
  contentTr     String? @db.Text
  solutionsTr   String? @db.Text

  // Basic Info - English
  nameEn        String
  h1En          String?
  descriptionEn String? @db.Text
  contentEn     String? @db.Text
  solutionsEn   String? @db.Text

  // SEO - Turkish
  metaTitleTr       String?
  metaDescriptionTr String? @db.Text
  ogTitleTr         String?
  ogDescriptionTr   String? @db.Text

  // SEO - English
  metaTitleEn       String?
  metaDescriptionEn String? @db.Text
  ogTitleEn         String?
  ogDescriptionEn   String? @db.Text

  // SEO - General
  canonical     String?
  isIndexed     Boolean @default(true)
  isFollowed    Boolean @default(true)
  schemaEnabled Boolean @default(true)
  ogImage       String?

  // Media
  image       String?
  imageAltTr  String?
  imageAltEn  String?
  icon        String?

  // Internal Linking
  relatedProducts String? @db.Text // JSON array of product slugs

  // Relations
  faqs FAQ[]

  // Status
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== FAQ ====================
model FAQ {
  id String @id @default(cuid())

  // Question & Answer - Turkish
  questionTr String
  answerTr   String @db.Text

  // Question & Answer - English
  questionEn String
  answerEn   String @db.Text

  // Relations
  productCategory   ProductCategory? @relation(fields: [productCategoryId], references: [id], onDelete: Cascade)
  productCategoryId String?
  industry          Industry?        @relation(fields: [industryId], references: [id], onDelete: Cascade)
  industryId        String?

  // Status
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== QUOTE REQUESTS ====================
model QuoteRequest {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  company   String?
  product   String?
  quantity  String?
  message   String   @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// ==================== JOB APPLICATIONS ====================
model JobApplication {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  position  String?
  cvUrl     String?
  message   String?  @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// ==================== CONTACT MESSAGES ====================
model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String?
  message   String   @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// ==================== SITE SETTINGS (Legacy) ====================
model Setting {
  id      String @id @default(cuid())
  key     String @unique
  valueTr String @db.Text
  valueEn String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== MEDIA LIBRARY ====================
model Media {
  id        String  @id @default(cuid())
  filename  String
  url       String
  altTr     String?
  altEn     String?
  titleTr   String?
  titleEn   String?
  type      String  @default("image") // image, document
  size      Int?

  createdAt DateTime @default(now())
}

// ==================== 301 REDIRECTS ====================
model Redirect {
  id        String   @id @default(cuid())
  fromPath  String   @unique
  toPath    String
  isPermanent Boolean @default(true) // true = 301, false = 302
  isActive  Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== BLOG CATEGORIES ====================
model BlogCategory {
  id   String @id @default(cuid())
  slug String @unique

  // Content
  nameTr        String
  nameEn        String
  descriptionTr String? @db.Text
  descriptionEn String? @db.Text

  // SEO
  metaTitleTr       String?
  metaDescriptionTr String? @db.Text
  metaTitleEn       String?
  metaDescriptionEn String? @db.Text

  // Relations
  posts BlogPost[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== BLOG POSTS ====================
model BlogPost {
  id   String @id @default(cuid())
  slug String @unique

  // Relation: Category
  categoryId String?
  category   BlogCategory? @relation(fields: [categoryId], references: [id])

  // Content - Turkish
  titleTr       String
  descriptionTr String? @db.Text
  contentTr     String? @db.Text

  // Content - English
  titleEn       String
  descriptionEn String? @db.Text
  contentEn     String? @db.Text

  // Advanced SEO
  keywordsTr        String? // Virgülle ayrılmış
  keywordsEn        String?
  canonicalUrl      String?
  robots            String? @default("index, follow") // index, noindex, follow, nofollow

  // Meta Tags
  metaTitleTr       String?
  metaDescriptionTr String? @db.Text
  metaTitleEn       String?
  metaDescriptionEn String? @db.Text
  
  // Open Graph & Social
  ogTitleTr       String?
  ogDescriptionTr String?
  ogTitleEn       String?
  ogDescriptionEn String?
  ogImage         String? // Özel sosyal medya görseli
  
  // Media & Author
  image       String?   // Featured Image
  imageAltTr  String?
  imageAltEn  String?
  authorName  String?   // Opsiyonel yazar adı (yoksa varsayılan)

  // System
  readingTime Int      @default(0) // Dakika cinsinden okuma süresi
  isPublished Boolean  @default(false)
  viewCount   Int      @default(0)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ==================== E-CATALOGS ====================
model Catalog {
  id        String   @id @default(cuid())
  
  // Info
  nameTr    String
  nameEn    String
  
  // Files
  coverImage String   // Thumbnail image
  pdfUrl     String   // PDF file link
  
  // Status
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== HERO SLIDER ====================
model HeroSlide {
  id        String   @id @default(cuid())
  
  image     String   // Background image URL
  
  titleTr   String
  titleEn   String
  descTr    String?  @db.Text
  descEn    String?  @db.Text
  
  btnTextTr String?
  btnTextEn String?
  btnLink   String?
  
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== SITE SETTINGS ====================
model SiteSettings {
  id String @id @default("settings")
  
  // General
  siteName   String?
  phone      String?
  email      String?
  address    String?
  
  // Brand
  logo       String?
  favicon    String?

  // SEO
  googleVerification String?
  bingVerification   String?
  yandexVerification String?

  // Social
  facebook   String?
  instagram  String?
  linkedin   String?
  twitter    String?
  youtube    String?
  // Home Page SEO
  homeTitleTr   String?
  homeTitleEn   String?
  homeDescTr    String?
  homeDescEn    String?

  whatsapp   String?
  contactMapUrl String? @db.Text
  
  updatedAt DateTime @updatedAt
}

// ==================== REFERENCES ====================
model Reference {
  id        String   @id @default(cuid())
  name      String   // Company name
  image     String   // Logo URL
  
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
